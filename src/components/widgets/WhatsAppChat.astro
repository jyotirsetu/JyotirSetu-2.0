---
// Enhanced WhatsApp Chat Widget
// Floating button with tooltip and smooth animations
---

<script>
  // WhatsApp Chat Widget
  class WhatsAppChatWidget {
    constructor() {
      this.isVisible = false;
      this.init();
    }
    
    init() {
      // Create floating button
      this.createFloatingButton();
      
      // Add scroll behavior
      window.addEventListener('scroll', this.handleScroll.bind(this));
      
      // Show after 3 seconds
      setTimeout(() => {
        this.show();
      }, 3000);
    }
    
    createFloatingButton() {
      const button = document.createElement('div');
      button.id = 'whatsapp-chat-widget';
      button.className = 'fixed bottom-6 right-6 z-40 transform translate-y-20 opacity-0 transition-all duration-500 ease-out';
      button.innerHTML = `
        <div class="relative group">
          <!-- Main Button -->
          <button 
            onclick="window.open('https://wa.me/919266991298?text=Hi%20Punita%20Sharma,%20I%20would%20like%20to%20book%20a%20consultation%20with%20you.', '_blank')"
            class="bg-green-500 hover:bg-green-600 text-white w-16 h-16 rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 flex items-center justify-center"
            aria-label="Chat with Punita Sharma on WhatsApp"
          >
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
          </button>
          
          <!-- Tooltip -->
          <div class="absolute bottom-full right-0 mb-3 px-3 py-2 bg-gray-900 text-white text-sm rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none whitespace-nowrap">
            ðŸ’¬ Chat with Punita Sharma on WhatsApp
            <div class="absolute top-full right-4 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-900"></div>
          </div>
          
          <!-- Pulse Animation -->
          <div class="absolute inset-0 bg-green-400 rounded-full animate-ping opacity-75"></div>
        </div>
        
        <!-- Close Button (appears on hover) -->
        <button 
          onclick="this.parentElement.remove()"
          class="absolute -top-2 -left-2 bg-red-500 hover:bg-red-600 text-white w-6 h-6 rounded-full shadow-lg transform scale-0 group-hover:scale-100 transition-transform duration-200 flex items-center justify-center text-xs font-bold"
          aria-label="Close WhatsApp widget"
        >
          Ã—
        </button>
      `;
      
      document.body.appendChild(button);
      this.button = button;
    }
    
    show() {
      if (this.isVisible) return;
      
      this.button.classList.remove('translate-y-20', 'opacity-0');
      this.button.classList.add('translate-y-0', 'opacity-100');
      this.isVisible = true;
    }
    
    hide() {
      if (!this.isVisible) return;
      
      this.button.classList.add('translate-y-20', 'opacity-0');
      this.button.classList.remove('translate-y-0', 'opacity-100');
      this.isVisible = false;
    }
    
    handleScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      // Hide on scroll down, show on scroll up
      if (scrollTop > this.lastScrollTop && scrollTop > 100) {
        this.hide();
      } else if (scrollTop < this.lastScrollTop) {
        this.show();
      }
      
      this.lastScrollTop = scrollTop;
    }
  }
  
  // Initialize WhatsApp widget when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    new WhatsAppChatWidget();
  });
</script>

<!-- WhatsApp Chat Widget Container -->
<div id="whatsapp-widget-container"></div>

<style>
  /* Custom animations for WhatsApp widget */
  @keyframes pulse-green {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
  }
  
  .animate-ping {
    animation: pulse-green 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  
  /* Hover effects */
  #whatsapp-chat-widget:hover .animate-ping {
    animation-play-state: paused;
  }
  
  /* Mobile responsiveness */
  @media (max-width: 768px) {
    #whatsapp-chat-widget {
      bottom: 4rem;
      right: 1rem;
    }
    
    #whatsapp-chat-widget button {
      width: 3.5rem;
      height: 3.5rem;
    }
    
    #whatsapp-chat-widget svg {
      width: 1.75rem;
      height: 1.75rem;
    }
  }
</style>
