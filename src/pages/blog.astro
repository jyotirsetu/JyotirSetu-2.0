---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Blog - JyotirSetu',
  description: 'Latest insights and articles from JyotirSetu astrology experts.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="JyotirSetu Blog"
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'Astrology Blog',
    }}
  >
    <Fragment slot="title">
      Insights & Wisdom from <br />
      <span class="text-accent dark:text-white">Vedic Astrology</span>
    </Fragment>

    <Fragment slot="subtitle">
      Discover ancient wisdom, modern insights, and practical guidance through our curated collection of astrology articles, 
      helping you understand the cosmic influences on your life journey.
    </Fragment>
  </Hero>

  <!-- Blog Latest Posts Widget ******************* -->

  <BlogLatestPosts
    title="Latest Articles"
    information="Explore our latest insights on Vedic astrology, planetary influences, and spiritual guidance."
  />

  <!-- Booking Button Section ****************** -->

  <section class="px-4 py-16 mx-auto max-w-7xl lg:py-20">
    <div class="text-center">
      <h2 class="text-3xl font-bold leading-tight tracking-tight text-gray-900 md:text-4xl lg:text-5xl dark:text-white">
        Ready for Personal Guidance?
      </h2>
      <p class="mt-4 text-xl text-gray-600 dark:text-slate-400">
        While our blog offers general insights, nothing compares to a personalized consultation tailored to your unique birth chart.
      </p>
      <div class="mt-8">
        <a
          href="/ScheduleAppointmentJyotirSetu"
          class="inline-flex items-center justify-center w-full sm:w-auto px-8 py-3 text-base font-medium text-white bg-primary border border-transparent rounded-md shadow-sm hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition duration-150 ease-in-out"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Book your Appointment
        </a>
      </div>
    </div>
  </section>
</Layout>
