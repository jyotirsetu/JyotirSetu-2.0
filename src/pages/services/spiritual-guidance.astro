        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Service Page Elements -->
  <ServicePageEnhancer />

  <!-- CTA Section -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book Spiritual Consultation',
        href: '/ScheduleAppointmentJyotirSetu',
        icon: 'tabler:calendar',
