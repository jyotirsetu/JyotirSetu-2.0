---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Testimonials - JyotirSetu',
  description: 'Read what our clients say about JyotirSetu astrology consultations and services.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    title="Client Testimonials"
    subtitle="Discover what our clients say about their experiences with JyotirSetu's expert astrology consultations."
  >
    <Fragment slot="title">
      Client <span class="text-accent dark:text-white">Testimonials</span>
    </Fragment>
  </Hero>

  <!-- Testimonials Section -->
  <Testimonials
    id="testimonials"
    title="What Our Clients Say"
    subtitle="Real experiences from satisfied clients who have transformed their lives through JyotirSetu's guidance."
    testimonials={[
      {
        title: "Career Guidance Success",
        testimonial: "JyotirSetu helped me understand my career path better. The consultation was insightful and practical. I got clarity on my business decisions and now I'm running a successful startup. The astrologer's guidance was spot-on!",
        name: "Rahul Sharma",
        job: "Business Owner",
        image: "~/assets/images/testimonials/rahul.jpg"
      },
      {
        title: "Perfect Match Found",
        testimonial: "The matchmaking service was excellent. Found my perfect match through their guidance. The compatibility analysis was spot on! We've been happily married for 2 years now. Thank you JyotirSetu!",
        name: "Priya Patel",
        job: "Software Engineer",
        image: "~/assets/images/testimonials/priya.jpg"
      },
      {
        title: "Study & Career Clarity",
        testimonial: "Professional service with accurate predictions. The study guidance helped me choose the right career path. I was confused between medicine and engineering, but their guidance led me to the perfect choice. Highly recommend!",
        name: "Amit Kumar",
        job: "Medical Student",
        image: "~/assets/images/testimonials/amit.jpg"
      },
      {
        title: "Palmistry Revelation",
        testimonial: "The palmistry reading was fascinating! JyotirSetu's expert explained everything so clearly. I feel more confident about my future now. The predictions about my family life were incredibly accurate.",
        name: "Sunita Verma",
        job: "Homemaker",
        image: "~/assets/images/testimonials/sunita.jpg"
      },
      {
        title: "Gemstone Transformation",
        testimonial: "The gemstone consultation was life-changing. Wearing the recommended gemstone improved my confidence and career prospects significantly. I got promoted within 6 months of following their advice!",
        name: "Mohit Singh",
        job: "Marketing Manager",
        image: "~/assets/images/testimonials/mohit.jpg"
      },
      {
        title: "Scientific Approach",
        testimonial: "As a medical professional, I was skeptical at first. But JyotirSetu's approach is scientific and practical. The career guidance was invaluable. They don't make false promises, just honest guidance.",
        name: "Neha Gupta",
        job: "Doctor",
        image: "~/assets/images/testimonials/neha.jpg"
      },
      {
        title: "Relationship Harmony",
        testimonial: "My relationship was going through a rough patch. JyotirSetu's relationship counseling helped us understand each other better. Now we're stronger than ever. Their advice was practical and effective.",
        name: "Rajesh & Meera",
        job: "Married Couple",
        image: "~/assets/images/testimonials/couple.jpg"
      },
      {
        title: "Financial Success",
        testimonial: "The financial astrology consultation was eye-opening. I learned about the best times for investments and business decisions. Following their advice, I've seen a 40% increase in my business profits.",
        name: "Vikram Malhotra",
        job: "Entrepreneur",
        image: "~/assets/images/testimonials/vikram.jpg"
      },
      {
        title: "Health & Wellness",
        testimonial: "JyotirSetu's health astrology consultation helped me understand my body better. The dietary and lifestyle recommendations based on my birth chart have improved my overall health significantly.",
        name: "Anjali Desai",
        job: "Fitness Trainer",
        image: "~/assets/images/testimonials/anjali.jpg"
      }
    ]}
  />

  <!-- Stats Section -->
  <section class="py-16 bg-page">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-heading mb-4">Our Success Numbers</h2>
        <p class="text-lg text-muted">Trusted by thousands of clients worldwide</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-4xl font-bold text-primary">10000+</div>
          <div class="text-muted text-sm">Happy Clients</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-primary">98%</div>
          <div class="text-muted text-sm">Success Rate</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-primary">25+</div>
          <div class="text-muted text-sm">Years Experience</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-primary">5000+</div>
          <div class="text-muted text-sm">Consultations</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-primary to-secondary">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Experience the Magic?</h2>
      <p class="text-xl text-blue-100 mb-8">Join thousands of satisfied clients who have transformed their lives with JyotirSetu's guidance.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/book-appointment"
          class="inline-block px-8 py-4 bg-white text-primary font-semibold rounded-lg shadow-lg hover:bg-gray-100 transition-all duration-300"
        >
          Book Consultation
        </a>
        <a 
          href="/contact"
          class="inline-block px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary transition-all duration-300"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
