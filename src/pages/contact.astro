---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Contact Us - JyotirSetu',
  description: 'Get in touch with JyotirSetu for expert astrology consultations. Contact us for guidance and appointments.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    title="Contact Us ☀️🌙⭐"
    subtitle="We're here to guide you — whether it's a question, collaboration, or just to say hello!"
    actions={[
      {
        variant: 'primary',
        text: 'Book Appointment',
        href: '/ScheduleAppointmentJyotirSetu',
        icon: 'tabler:calendar',
      },
    ]}
  >
    <div slot="title">
      Contact Us <span class="text-accent dark:text-white">☀️🌙⭐</span>
    </div>
  </Hero>

  <!-- Contact Section -->
  <section class="py-16 bg-page">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Contact Details -->
          <div class="bg-light rounded-xl p-8 shadow-sm border border-gray-200 dark:border-gray-700">
            <h3 class="text-2xl font-bold text-heading mb-6 flex items-center">
              <span class="text-3xl mr-3">📍</span>
              Get in Touch
            </h3>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                  <span class="text-xl">📍</span>
                </div>
                <div>
                  <h4 class="font-semibold text-heading mb-1">Business Address</h4>
                  <p class="text-muted leading-relaxed">
                    40A/5, Sector-15, Part 2,<br>
                    Chander Nagar, Gurugram 122001<br>
                    <span class="text-sm text-primary font-medium">(Appointments Only)</span>
                  </p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                  <span class="text-xl">📧</span>
                </div>
                <div>
                  <h4 class="font-semibold text-heading mb-1">Email</h4>
                  <a href="mailto:guidance@jyotirsetu.com" class="text-primary hover:text-accent transition-colors">
                    guidance@jyotirsetu.com
                  </a>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                  <span class="text-xl">📞</span>
                </div>
                <div>
                  <h4 class="font-semibold text-heading mb-1">Phone & WhatsApp</h4>
                  <a href="tel:+919266991298" class="text-primary hover:text-accent transition-colors">
                    +91-9266991298
                  </a>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                  <span class="text-xl">🕒</span>
                </div>
                <div>
                  <h4 class="font-semibold text-heading mb-1">Office Hours</h4>
                  <p class="text-muted">
                    8:00 AM to 7:00 PM<br>
                    <span class="text-sm text-primary font-medium">(By appointment only)</span>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media Links -->
          <div class="bg-light rounded-xl p-8 shadow-sm border border-gray-200 dark:border-gray-700">
            <h3 class="text-2xl font-bold text-heading mb-6 flex items-center">
              <span class="text-3xl mr-3">✨</span>
              Connect With Us
            </h3>
            <div class="flex space-x-4">
              <a 
                href="https://instagram.com/jyotirsetu" 
                target="_blank" 
                class="w-12 h-12 bg-gradient-to-r from-pink-500 to-purple-600 rounded-full flex items-center justify-center text-white hover:from-pink-600 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
              <a 
                href="https://wa.me/919266991298" 
                target="_blank" 
                class="w-12 h-12 bg-green-600 rounded-full flex items-center justify-center text-white hover:bg-green-700 transition-all duration-300 shadow-lg hover:shadow-xl"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                </svg>
              </a>
            </div>
            <p class="text-sm text-muted mt-4">
              Follow us on social media for daily astrology insights and updates!
            </p>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-light rounded-xl p-8 shadow-sm border border-gray-200 dark:border-gray-700">
          <h3 class="text-2xl font-bold text-heading mb-6 flex items-center">
            <span class="text-3xl mr-3">🔮</span>
            Send us a Message
          </h3>
          <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-heading mb-2">Full Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:bg-gray-800 dark:border-gray-600 dark:text-white transition-colors"
                  placeholder="Enter your full name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-heading mb-2">Email Address *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:bg-gray-800 dark:border-gray-600 dark:text-white transition-colors"
                  placeholder="Enter your email"
                />
              </div>
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-heading mb-2">Phone Number (Optional)</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:bg-gray-800 dark:border-gray-600 dark:text-white transition-colors"
                placeholder="Enter your phone number"
              />
            </div>
            
            <div>
              <label for="query-type" class="block text-sm font-medium text-heading mb-2">Select Query Type</label>
              <select
                id="query-type"
                name="query-type"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:bg-gray-800 dark:border-gray-600 dark:text-white transition-colors"
              >
                <option value="">Select query type</option>
                <option value="general">General Inquiry</option>
                <option value="media">Media/Press</option>
                <option value="collaboration">Business Collaboration</option>
                <option value="astrology">Astrology Query</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-heading mb-2">Message / Query *</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:bg-gray-800 dark:border-gray-600 dark:text-white transition-colors resize-none"
                placeholder="Tell us about your inquiry or question..."
              ></textarea>
            </div>
            
            <button
              type="submit"
              class="w-full bg-primary text-white py-3 px-6 rounded-lg font-semibold hover:bg-accent transition-all duration-300 flex items-center justify-center shadow-lg hover:shadow-xl"
            >
              <span class="mr-2">✨</span>
              Send Message
            </button>
            
            <p class="text-sm text-muted text-center">
              Your privacy is our priority. All information shared will remain strictly confidential.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-primary to-secondary">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Begin Your Journey?</h2>
      <p class="text-lg text-blue-100 mb-8">
        Book your appointment today and experience the guidance you deserve.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/ScheduleAppointmentJyotirSetu"
          class="inline-flex items-center px-8 py-4 bg-white text-primary font-semibold rounded-lg shadow-lg hover:bg-gray-100 transition-all duration-300"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Book Appointment
        </a>
        <a
          href="https://wa.me/919266991298"
          target="_blank"
          class="inline-flex items-center px-8 py-4 bg-green-600 text-white font-semibold rounded-lg shadow-lg hover:bg-green-700 transition-all duration-300"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
          </svg>
          WhatsApp Us
        </a>
      </div>
    </div>
  </section>
</Layout>
