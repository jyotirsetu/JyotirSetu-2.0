---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '/admin',
        },
        {
          variant: 'primary',
          text: 'Book Consultation',
          href: '/ScheduleAppointmentJyotirSetu',
        },
      ]}
