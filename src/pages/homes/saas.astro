    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="JyotirSetu SaaS Platform"
    actions={[
      { variant: 'primary', text: 'Start Free Trial', href: '/ScheduleAppointmentJyotirSetu' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/2hero-image.png',
      alt: 'JyotirSetu SaaS Platform',
    }}
  >
    <Fragment slot="title">
      Transform your astrology practice with <br /> JyotirSetu's <span class="text-accent dark:text-white">SaaS Platform</span><br
      />
    </Fragment>

