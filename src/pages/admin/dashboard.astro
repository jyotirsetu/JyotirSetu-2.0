---
import AdminLayout from '../../admin/layouts/AdminLayout.astro';

// Fetch real data from the API
interface DashboardData {
  stats: {
    totalAppointments: number;
    completedAppointments: number;
    pendingAppointments: number;
    totalRevenue: number;
    averageRating: number;
    repeatClients: number;
    newClients: number;
    totalTestimonials: number;
  };
  serviceBreakdown: Array<{
    name: string;
    count: number;
    revenue: number;
    color: string;
  }>;
  recentAppointments: Array<{
    id: string | number;
    client: string;
    service: string;
    date: string;
    time: string;
    status: string;
    rating?: number | null;
  }>;
  monthlyRevenue: Array<{
    month: string;
    revenue: number;
  }>;
  clientDemographics: {
    ageGroups: Array<{
      range: string;
      count: number;
      percentage: number;
    }>;
    topCities: Array<{
      city: string;
      count: number;
    }>;
  };
}

let dashboardData: DashboardData = {
  stats: {
    totalAppointments: 0,
    completedAppointments: 0,
    pendingAppointments: 0,
    totalRevenue: 0,
    averageRating: 0,
    repeatClients: 0,
    newClients: 0,
    totalTestimonials: 0
  },
  serviceBreakdown: [],
  recentAppointments: [],
  monthlyRevenue: [],
  clientDemographics: {
    ageGroups: [],
    topCities: []
  }
};

// Try to fetch data from API, fallback to empty data if API is not available
try {
  const response = await fetch(`${import.meta.env.SITE}/admin/api/dashboard-stats`, {
    method: 'GET',
    headers: {
      'Content-Type': 'application/json',
    },
  });
  
  if (response.ok) {
    const result = await response.json();
    if (result.success) {
      dashboardData = result.data;
    }
  }
} catch {
  console.log('Dashboard API not available, using fallback data');
  // Fallback to mock data if API is not available
  dashboardData = {
    stats: {
      totalAppointments: 156,
      completedAppointments: 142,
      pendingAppointments: 14,
      totalRevenue: 45600,
      averageRating: 4.8,
      repeatClients: 89,
      newClients: 67,
      totalTestimonials: 45
    },
    serviceBreakdown: [
      { name: 'Astrology Consultation', count: 45, revenue: 13500, color: '#3b82f6' },
      { name: 'Palmistry Reading', count: 38, revenue: 11400, color: '#10b981' },
      { name: 'Numerology Analysis', count: 32, revenue: 9600, color: '#f59e0b' },
      { name: 'Tarot Card Reading', count: 28, revenue: 8400, color: '#8b5cf6' },
      { name: 'Vastu Consultation', count: 13, revenue: 2700, color: '#ef4444' }
    ],
    recentAppointments: [
      { id: 1, client: 'Priya Sharma', service: 'Astrology Consultation', date: '2024-01-15', time: '10:00 AM', status: 'completed', rating: 5 },
      { id: 2, client: 'Rajesh Kumar', service: 'Palmistry Reading', date: '2024-01-16', time: '2:30 PM', status: 'pending', rating: null },
      { id: 3, client: 'Sneha Patel', service: 'Numerology Analysis', date: '2024-01-17', time: '11:00 AM', status: 'scheduled', rating: null },
      { id: 4, client: 'Amit Singh', service: 'Tarot Card Reading', date: '2024-01-18', time: '4:00 PM', status: 'scheduled', rating: null },
      { id: 5, client: 'Kavita Gupta', service: 'Vastu Consultation', date: '2024-01-19', time: '9:30 AM', status: 'pending', rating: null }
    ],
    monthlyRevenue: [
      { month: 'Jul', revenue: 3200 },
      { month: 'Aug', revenue: 3800 },
      { month: 'Sep', revenue: 4200 },
      { month: 'Oct', revenue: 4500 },
      { month: 'Nov', revenue: 4800 },
      { month: 'Dec', revenue: 5200 },
      { month: 'Jan', revenue: 5600 }
    ],
    clientDemographics: {
      ageGroups: [
        { range: '18-25', count: 25, percentage: 16 },
        { range: '26-35', count: 45, percentage: 29 },
        { range: '36-45', count: 38, percentage: 24 },
        { range: '46-55', count: 28, percentage: 18 },
        { range: '55+', count: 20, percentage: 13 }
      ],
      topCities: [
        { city: 'Mumbai', count: 35 },
        { city: 'Delhi', count: 28 },
        { city: 'Bangalore', count: 22 },
        { city: 'Pune', count: 18 },
        { city: 'Chennai', count: 15 }
      ]
    }
  };
}
---

<AdminLayout title="Dashboard">
  <div style="max-width: 80rem; margin: 0 auto;">
    <!-- Header -->
    <div style="margin-bottom: 2rem;">
      <h1 style="font-size: 1.875rem; font-weight: bold; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Dashboard</h1>
      <p style="color: #cbd5e1; margin-top: 0.5rem; margin-bottom: 0;">Welcome to JyotirSetu Admin Panel</p>
    </div>
    
    <!-- Enhanced Stats Cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
      <!-- Total Appointments -->
      <div class="admin-card dashboard-card stats-card" data-stat="total-appointments" style="padding: 2rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 100px; height: 100px; background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(30, 64, 175, 0.05) 100%); border-radius: 50%; transform: translate(30px, -30px);"></div>
        <div style="display: flex; align-items: center; position: relative; z-index: 1;">
          <div style="padding: 1rem; border-radius: 1rem; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); color: white; box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3);">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div style="margin-left: 1.25rem;">
            <p style="font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin: 0 0 0.5rem 0;">Total Consultations</p>
            <p class="stat-value" style="font-size: 2rem; font-weight: 700; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">{dashboardData.stats.totalAppointments}</p>
            <p style="font-size: 0.75rem; color: #10b981; margin: 0.25rem 0 0 0;">↗ +12% this month</p>
          </div>
        </div>
      </div>
      
      <!-- Total Revenue -->
      <div class="admin-card dashboard-card stats-card" data-stat="total-revenue" style="padding: 2rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 100px; height: 100px; background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.05) 100%); border-radius: 50%; transform: translate(30px, -30px);"></div>
        <div style="display: flex; align-items: center; position: relative; z-index: 1;">
          <div style="padding: 1rem; border-radius: 1rem; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.3);">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <div style="margin-left: 1.25rem;">
            <p style="font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin: 0 0 0.5rem 0;">Total Revenue</p>
            <p class="stat-value" style="font-size: 2rem; font-weight: 700; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">₹{dashboardData.stats.totalRevenue.toLocaleString()}</p>
            <p style="font-size: 0.75rem; color: #10b981; margin: 0.25rem 0 0 0;">↗ +18% this month</p>
          </div>
        </div>
      </div>
      
      <!-- Average Rating -->
      <div class="admin-card dashboard-card stats-card" data-stat="client-rating" style="padding: 2rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 100px; height: 100px; background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(217, 119, 6, 0.05) 100%); border-radius: 50%; transform: translate(30px, -30px);"></div>
        <div style="display: flex; align-items: center; position: relative; z-index: 1;">
          <div style="padding: 1rem; border-radius: 1rem; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; box-shadow: 0 4px 6px -1px rgba(245, 158, 11, 0.3);">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
          </div>
          <div style="margin-left: 1.25rem;">
            <p style="font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin: 0 0 0.5rem 0;">Client Rating</p>
            <p class="stat-value" style="font-size: 2rem; font-weight: 700; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">{dashboardData.stats.averageRating}/5</p>
            <p style="font-size: 0.75rem; color: #10b981; margin: 0.25rem 0 0 0;">{dashboardData.stats.totalTestimonials} reviews</p>
          </div>
        </div>
      </div>
      
      <!-- Repeat Clients -->
      <div class="admin-card dashboard-card stats-card" data-stat="repeat-clients" style="padding: 2rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 100px; height: 100px; background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(124, 58, 237, 0.05) 100%); border-radius: 50%; transform: translate(30px, -30px);"></div>
        <div style="display: flex; align-items: center; position: relative; z-index: 1;">
          <div style="padding: 1rem; border-radius: 1rem; background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; box-shadow: 0 4px 6px -1px rgba(139, 92, 246, 0.3);">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div style="margin-left: 1.25rem;">
            <p style="font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin: 0 0 0.5rem 0;">Repeat Clients</p>
            <p class="stat-value" style="font-size: 2rem; font-weight: 700; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">{dashboardData.stats.repeatClients}</p>
            <p style="font-size: 0.75rem; color: #10b981; margin: 0.25rem 0 0 0;">57% retention rate</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Analytics Section -->
    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin-bottom: 2rem;">
      <!-- Service Performance Chart -->
      <div class="admin-card analytics-card" style="padding: 2rem;">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1.5rem;">
          <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Service Performance</h3>
          <div style="display: flex; gap: 0.5rem;">
            <button style="padding: 0.5rem 1rem; border-radius: 0.375rem; background: rgba(59, 130, 246, 0.1); border: 1px solid rgba(59, 130, 246, 0.3); color: #60a5fa; font-size: 0.875rem; cursor: pointer;">Monthly</button>
            <button style="padding: 0.5rem 1rem; border-radius: 0.375rem; background: rgba(59, 130, 246, 0.2); border: 1px solid rgba(59, 130, 246, 0.4); color: #93c5fd; font-size: 0.875rem; cursor: pointer;">Weekly</button>
          </div>
        </div>
        
        <!-- Simple Bar Chart Representation -->
        <div style="display: flex; flex-direction: column; gap: 1rem;">
          {dashboardData.serviceBreakdown.map((service) => (
            <div style="display: flex; align-items: center; gap: 1rem;">
              <div style="width: 120px; text-align: left;">
                <p style="font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin: 0;">{service.name}</p>
                <p style="font-size: 0.75rem; color: #94a3b8; margin: 0.25rem 0 0 0;">₹{service.revenue.toLocaleString()}</p>
              </div>
              <div style="flex: 1; height: 8px; background: rgba(30, 41, 59, 0.5); border-radius: 4px; overflow: hidden;">
                <div style={`width: ${(service.count / Math.max(...dashboardData.serviceBreakdown.map(s => s.count))) * 100}%; height: 100%; background: linear-gradient(90deg, ${service.color} 0%, ${service.color}80 100%); border-radius: 4px; transition: width 0.3s ease;`}></div>
              </div>
              <div style="width: 60px; text-align: right;">
                <p style="font-size: 0.875rem; font-weight: 600; color: #f8fafc; margin: 0;">{service.count}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Client Demographics -->
      <div class="admin-card analytics-card" style="padding: 2rem;">
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 1.5rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Client Demographics</h3>
        
        <!-- Age Groups -->
        <div style="margin-bottom: 1.5rem;">
          <h4 style="font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin: 0 0 1rem 0;">Age Groups</h4>
          <div style="display: flex; flex-direction: column; gap: 0.75rem;">
            {dashboardData.clientDemographics.ageGroups.map((group) => (
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <div style="width: 50px; text-align: left;">
                  <p style="font-size: 0.75rem; color: #94a3b8; margin: 0;">{group.range}</p>
                </div>
                <div style="flex: 1; height: 6px; background: rgba(30, 41, 59, 0.5); border-radius: 3px; overflow: hidden;">
                  <div style={`width: ${group.percentage}%; height: 100%; background: linear-gradient(90deg, #8b5cf6 0%, #7c3aed 100%); border-radius: 3px; transition: width 0.3s ease;`}></div>
                </div>
                <div style="width: 40px; text-align: right;">
                  <p style="font-size: 0.75rem; font-weight: 500; color: #f8fafc; margin: 0;">{group.count}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Top Cities -->
        <div>
          <h4 style="font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin: 0 0 1rem 0;">Top Cities</h4>
          <div style="display: flex; flex-direction: column; gap: 0.5rem;">
            {dashboardData.clientDemographics.topCities.map((city) => (
              <div style="display: flex; align-items: center; justify-content: space-between; padding: 0.5rem 0.75rem; background: rgba(59, 130, 246, 0.05); border-radius: 0.5rem;">
                <p style="font-size: 0.875rem; color: #cbd5e1; margin: 0;">{city.city}</p>
                <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.5rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); color: white;">{city.count}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Revenue Trend -->
    <div class="admin-card analytics-card" style="padding: 2rem; margin-bottom: 2rem;">
      <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1.5rem;">
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Revenue Trend (Last 7 Months)</h3>
        <div style="display: flex; align-items: center; gap: 0.5rem;">
          <span style="font-size: 0.875rem; color: #10b981;">↗ +23% growth</span>
          <div style="width: 8px; height: 8px; background: #10b981; border-radius: 50%;"></div>
        </div>
      </div>
      
      <!-- Simple Line Chart Representation -->
      <div style="display: flex; align-items: end; justify-content: space-between; height: 120px; padding: 1rem 0; border-bottom: 1px solid rgba(59, 130, 246, 0.2);">
        {dashboardData.monthlyRevenue.map((month) => (
          <div style="display: flex; flex-direction: column; align-items: center; gap: 0.5rem;">
            <div style={`width: 20px; height: ${(month.revenue / Math.max(...dashboardData.monthlyRevenue.map(m => m.revenue))) * 80}px; background: linear-gradient(180deg, #3b82f6 0%, #1e40af 100%); border-radius: 2px; transition: height 0.3s ease;`}></div>
            <p style="font-size: 0.75rem; color: #94a3b8; margin: 0;">{month.month}</p>
            <p style="font-size: 0.75rem; font-weight: 500; color: #f8fafc; margin: 0;">₹{month.revenue}</p>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Recent Activity -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 2rem;">
      <!-- Recent Appointments -->
      <div class="admin-card" style="padding: 2rem;">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1.5rem;">
          <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Recent Appointments</h3>
          <a href="/admin/appointment-management" class="admin-btn-primary" style="padding: 0.5rem 1rem; font-size: 0.875rem;">View All</a>
        </div>
        
        <div class="recent-appointments-container" style="display: flex; flex-direction: column; gap: 1rem;">
          {dashboardData.recentAppointments.map((appointment) => {
            const statusColors = {
              completed: { bg: 'rgba(16, 185, 129, 0.1)', border: '#10b981', gradient: 'linear-gradient(135deg, #10b981 0%, #059669 100%)' },
              pending: { bg: 'rgba(245, 158, 11, 0.1)', border: '#f59e0b', gradient: 'linear-gradient(135deg, #f59e0b 0%, #d97706 100%)' },
              scheduled: { bg: 'rgba(59, 130, 246, 0.1)', border: '#3b82f6', gradient: 'linear-gradient(135deg, #3b82f6 0%, #1e40af 100%)' }
            };
            const statusConfig = statusColors[appointment.status];
            
            return (
              <div style={`display: flex; align-items: center; justify-content: space-between; padding: 1rem; background: ${statusConfig.bg}; border-radius: 0.75rem; border-left: 4px solid ${statusConfig.border};`}>
                <div>
                  <p style="font-weight: 600; color: #f8fafc; margin: 0 0 0.25rem 0;">{appointment.client}</p>
                  <p style="font-size: 0.875rem; color: #cbd5e1; margin: 0;">{appointment.service}</p>
                  {appointment.rating && appointment.rating > 0 && (
                    <div style="display: flex; align-items: center; gap: 0.25rem; margin-top: 0.25rem;">
                      {[...Array(5)].map((_, i) => (
                        <svg style={`width: 0.875rem; height: 0.875rem; color: ${i < (appointment.rating || 0) ? '#fbbf24' : '#6b7280'};`} fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                  )}
                </div>
                <div style="text-align: right;">
                  <p style="font-size: 0.875rem; color: #cbd5e1; margin: 0 0 0.25rem 0;">{appointment.date}</p>
                  <p style="font-size: 0.75rem; color: #94a3b8; margin: 0 0 0.5rem 0;">{appointment.time}</p>
                  <span style={`display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: ${statusConfig.gradient}; color: white; text-transform: capitalize;`}>{appointment.status}</span>
                </div>
              </div>
            );
          })}
        </div>
      </div>
      
      <!-- Quick Actions -->
      <div class="admin-card" style="padding: 2rem;">
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 1.5rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Quick Actions</h3>
        
        <div style="display: flex; flex-direction: column; gap: 1rem;">
          <a href="/admin/appointment-management/new" class="quick-action-card" style="display: flex; align-items: center; padding: 1rem; border-radius: 0.75rem; border: 1px solid #e5e7eb; background: rgba(59, 130, 246, 0.05); text-decoration: none;">
            <div class="quick-action-icon" style="padding: 0.75rem; border-radius: 50%; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); color: white; margin-right: 1rem; box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3);">
              <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
