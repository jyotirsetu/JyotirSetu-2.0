  <script>
    // Dashboard functionality
    document.addEventListener('DOMContentLoaded', function() {
      // Refresh dashboard data every 30 seconds
      setInterval(refreshDashboardData, 30000);
      
      // Add click handlers for quick actions
      setupQuickActions();
      
      // Add real-time updates
      setupRealTimeUpdates();
    });

    async function refreshDashboardData() {
      try {
        const response = await fetch('/admin/api/dashboard-stats');
        if (response.ok) {
          const result = await response.json();
          if (result.success) {
            updateDashboardUI(result.data);
          }
        }
      } catch (error) {
        console.log('Failed to refresh dashboard data:', error);
      }
    }

    function updateDashboardUI(data) {
      // Update stats cards
      updateStatsCard('total-appointments', data.stats.totalAppointments);
      updateStatsCard('total-revenue', `₹${data.stats.totalRevenue.toLocaleString()}`);
      updateStatsCard('client-rating', `${data.stats.averageRating}/5`);
      updateStatsCard('repeat-clients', data.stats.repeatClients);

      // Update recent appointments
      updateRecentAppointments(data.recentAppointments);
    }

    function updateStatsCard(selector, value) {
      const card = document.querySelector(`[data-stat="${selector}"]`);
      if (card) {
        const valueElement = card.querySelector('.stat-value');
        if (valueElement) {
          valueElement.textContent = value;
        }
      }
    }

    function updateRecentAppointments(appointments) {
      const container = document.querySelector('.recent-appointments-container');
      if (container && appointments) {
        // Update appointment list
        container.innerHTML = appointments.map(apt => `
          <div class="appointment-item" style="display: flex; align-items: center; justify-content: space-between; padding: 1rem; background: rgba(59, 130, 246, 0.05); border-radius: 0.75rem; border-left: 4px solid #3b82f6; margin-bottom: 1rem;">
            <div>
              <p style="font-weight: 600; color: #f8fafc; margin: 0 0 0.25rem 0;">${apt.name}</p>
              <p style="font-size: 0.875rem; color: #cbd5e1; margin: 0;">${apt.service}</p>
            </div>
            <div style="text-align: right;">
              <p style="font-size: 0.875rem; color: #cbd5e1; margin: 0 0 0.5rem 0;">${apt.date}</p>
              <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); color: white; text-transform: capitalize;">${apt.status}</span>
            </div>
          </div>
        `).join('');
      }
    }

    function setupQuickActions() {
      // Add click handlers for quick action buttons
      const quickActionButtons = document.querySelectorAll('.quick-action-card');
      quickActionButtons.forEach(button => {
        button.addEventListener('click', function(_e) {
          // Add loading state
          const icon = this.querySelector('.quick-action-icon');
          if (icon) {
            icon.style.transform = 'scale(0.9)';
            setTimeout(() => {
              icon.style.transform = 'scale(1.1)';
            }, 150);
          }
        });
      });
    }

    function setupRealTimeUpdates() {
      // Add real-time indicators
      const statusDots = document.querySelectorAll('.pulse-dot');
      statusDots.forEach(dot => {
        // Ensure pulse animation is working
        if (dot instanceof HTMLElement) {
          dot.style.animation = 'pulse 2s infinite';
        }
      });

      // Add hover effects for stats cards
      const statsCards = document.querySelectorAll('.stats-card');
      statsCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
          this.style.transform = 'translateY(-2px)';
        });
        
        card.addEventListener('mouseleave', function() {
          this.style.transform = 'translateY(0)';
        });
      });
    }

    // Export functions for external use
    interface DashboardAPI {
      refreshData: () => Promise<void>;
      updateUI: (data: Record<string, unknown>) => void;
    }
    
    (window as unknown as { dashboardAPI: DashboardAPI }).dashboardAPI = {
      refreshData: refreshDashboardData,
      updateUI: updateDashboardUI
    };
  </script>
