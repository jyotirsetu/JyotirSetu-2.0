---
import AdminLayout from '../../admin/layouts/AdminLayout.astro';
---

<AdminLayout title="Admin Settings">
  <div style="max-width: 60rem; margin: 0 auto;">
    <!-- Header -->
    <div style="margin-bottom: 2rem;">
      <h1 style="font-size: 1.875rem; font-weight: bold; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Admin Settings</h1>
      <p style="color: #cbd5e1; margin-top: 0.5rem; margin-bottom: 0;">Configure your admin panel and website settings</p>
    </div>
    
    <!-- Settings Sections -->
    <div style="display: flex; flex-direction: column; gap: 2rem;">
      <!-- General Settings -->
      <div class="admin-card" style="padding: 1.5rem;">
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 1rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">General Settings</h3>
        
        <div style="display: flex; flex-direction: column; gap: 1rem;">
          <div>
            <label style="display: block; font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin-bottom: 0.5rem;">Website Name</label>
            <input type="text" id="siteName" name="siteName" value="JyotirSetu" style="width: 100%; border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; padding: 0.75rem; background: rgba(15, 23, 42, 0.8); color: #f8fafc; backdrop-filter: blur(10px);">
          </div>
          
          <div>
            <label style="display: block; font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin-bottom: 0.5rem;">Admin Email</label>
            <input type="email" id="adminEmail" name="adminEmail" value="admin@jyotirsetu.com" style="width: 100%; border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; padding: 0.75rem; background: rgba(15, 23, 42, 0.8); color: #f8fafc; backdrop-filter: blur(10px);">
          </div>
          
          <div>
            <label style="display: block; font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin-bottom: 0.5rem;">Contact Phone</label>
            <input type="tel" id="contactPhone" name="contactPhone" value="+91-9876543210" style="width: 100%; border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; padding: 0.75rem; background: rgba(15, 23, 42, 0.8); color: #f8fafc; backdrop-filter: blur(10px);">
          </div>
          
          <div>
            <label style="display: block; font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin-bottom: 0.5rem;">Website URL</label>
            <input type="url" id="websiteUrl" name="websiteUrl" value="https://jyotirsetu.com" style="width: 100%; border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; padding: 0.75rem; background: rgba(15, 23, 42, 0.8); color: #f8fafc; backdrop-filter: blur(10px);">
          </div>
        </div>
        
        <div style="margin-top: 1.5rem;">
          <button class="admin-btn-primary">Save General Settings</button>
        </div>
      </div>
      
      <!-- Formspree Integration -->
      <div class="admin-card" style="padding: 1.5rem;">
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 1rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Formspree Integration</h3>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Formspree Form ID</label>
            <input type="text" id="formspreeEndpoint" name="formspreeEndpoint" value="xnnbzveo" class="w-full border border-gray-300 rounded-md px-3 py-2">
            <p class="text-sm text-gray-500 mt-1">Your current Formspree form endpoint</p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Webhook URL</label>
            <input type="url" id="webhookUrl" name="webhookUrl" value="https://jyotirsetu.com/api/whatsapp-simple" class="w-full border border-gray-300 rounded-md px-3 py-2">
            <p class="text-sm text-gray-500 mt-1">Configure this in your Formspree webhook settings</p>
          </div>
          
          <div class="flex items-center">
            <input type="checkbox" id="whatsapp-enabled" checked class="h-4 w-4 text-blue-600 border-gray-300 rounded">
            <label for="whatsapp-enabled" class="ml-2 text-sm text-gray-700">Enable WhatsApp confirmations</label>
          </div>
        </div>
        
        <div class="mt-6">
          <button class="admin-btn-primary">Save Formspree Settings</button>
        </div>
      </div>
      
      <!-- WhatsApp Configuration -->
      <div class="admin-card" style="padding: 1.5rem;">
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 1rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">WhatsApp Business API</h3>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Access Token</label>
            <input type="password" id="whatsappToken" name="whatsappToken" placeholder="Your WhatsApp access token" class="w-full border border-gray-300 rounded-md px-3 py-2">
            <p class="text-sm text-gray-500 mt-1">Keep this secure and never share it publicly</p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number ID</label>
            <input type="text" id="whatsappPhoneId" name="whatsappPhoneId" placeholder="Your WhatsApp phone number ID" class="w-full border border-gray-300 rounded-md px-3 py-2">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Business Phone Number</label>
            <input type="tel" id="whatsappBusinessPhone" name="whatsappBusinessPhone" placeholder="+91-9876543210" class="w-full border border-gray-300 rounded-md px-3 py-2">
          </div>
        </div>
        
        <div class="mt-6">
          <button class="admin-btn-primary">Save WhatsApp Settings</button>
        </div>
      </div>
      
      <!-- Security Settings -->
      <div class="admin-card" style="padding: 1.5rem;">
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 1rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Security Settings</h3>
        
        <div style="display: flex; flex-direction: column; gap: 1rem;">
          <div style="display: flex; align-items: center; justify-content: space-between; padding: 1rem; background: rgba(59, 130, 246, 0.1); border-radius: 0.75rem; border: 1px solid rgba(59, 130, 246, 0.2);">
            <div>
              <h4 style="font-weight: 600; color: #f8fafc; margin: 0 0 0.25rem 0;">Change Admin Password</h4>
              <p style="font-size: 0.875rem; color: #cbd5e1; margin: 0;">Update your admin panel password for better security</p>
            </div>
            <a href="/admin/change-password" class="admin-btn-primary" style="padding: 0.5rem 1rem; font-size: 0.875rem; text-decoration: none;">
              Change Password
            </a>
          </div>
          
          <div style="display: flex; align-items: center; gap: 0.75rem; padding: 1rem; background: rgba(15, 23, 42, 0.5); border-radius: 0.75rem; border: 1px solid rgba(59, 130, 246, 0.1);">
            <input type="checkbox" id="two-factor" style="width: 1rem; height: 1rem; accent-color: #3b82f6;">
            <label for="two-factor" style="font-size: 0.875rem; color: #cbd5e1; cursor: pointer;">Enable two-factor authentication</label>
          </div>
          
          <div style="display: flex; align-items: center; gap: 0.75rem; padding: 1rem; background: rgba(15, 23, 42, 0.5); border-radius: 0.75rem; border: 1px solid rgba(59, 130, 246, 0.1);">
            <input type="checkbox" id="session-timeout" checked style="width: 1rem; height: 1rem; accent-color: #3b82f6;">
            <label for="session-timeout" style="font-size: 0.875rem; color: #cbd5e1; cursor: pointer;">Auto-logout after 30 minutes of inactivity</label>
          </div>
        </div>
      </div>
      
      <!-- Backup & Export -->
      <div class="admin-card" style="padding: 1.5rem;">
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 1rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Backup & Export</h3>
        
        <div class="space-y-4">
          <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-900">Export Appointments</h4>
              <p class="text-sm text-gray-600">Download all appointment data as CSV</p>
            </div>
            <button class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50">Export</button>
          </div>
          
          <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-900">Export Testimonials</h4>
              <p class="text-sm text-gray-600">Download all testimonials as JSON</p>
            </div>
            <button class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50">Export</button>
          </div>
          
          <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-900">Backup Database</h4>
              <p class="text-sm text-gray-600">Create a complete backup of all data</p>
            </div>
            <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Backup</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
