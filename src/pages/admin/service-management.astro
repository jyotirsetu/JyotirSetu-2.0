---
import AdminLayout from '../../admin/layouts/AdminLayout.astro';
---

<AdminLayout title="Service Management">
  <div style="max-width: 80rem; margin: 0 auto;">
    <!-- Header -->
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2rem;">
      <div>
        <h1 style="font-size: 1.875rem; font-weight: bold; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Service Management</h1>
        <p style="color: #cbd5e1; margin-top: 0.5rem; margin-bottom: 0;">Manage your astrology services and offerings</p>
      </div>
      <a href="/admin/service-management/new" class="admin-btn-primary">
        <svg style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Add New Service
      </a>
    </div>
    
    <!-- Services Grid -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 1.5rem;">
      <!-- Astrology Service -->
      <div class="admin-card" style="padding: 1.5rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 80px; height: 80px; background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(30, 64, 175, 0.05) 100%); border-radius: 50%; transform: translate(20px, -20px);"></div>
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem; position: relative; z-index: 1;">
          <div style="padding: 0.75rem; border-radius: 50%; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); color: white; box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3);">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
          </div>
          <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3);">
            Active
          </span>
        </div>
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 0.5rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Astrology Consultation</h3>
        <p style="color: #cbd5e1; font-size: 0.875rem; margin: 0 0 1rem 0;">Complete birth chart analysis and life guidance based on Vedic astrology principles.</p>
        <div style="display: flex; align-items: center; justify-content: space-between; font-size: 0.875rem; color: #cbd5e1; margin: 0 0 1rem 0;">
          <span>Duration: 60 mins</span>
          <span style="color: #f8fafc; font-weight: 600;">₹2,500</span>
        </div>
        <div style="display: flex; gap: 0.5rem;">
          <button style="flex: 1; padding: 0.5rem 0.75rem; font-size: 0.875rem; border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; color: #cbd5e1; background: rgba(30, 41, 59, 0.8); transition: all 0.3s ease;" onmouseover="this.style.background='rgba(59, 130, 246, 0.2)'" onmouseout="this.style.background='rgba(30, 41, 59, 0.8)'">Edit</button>
          <button style="flex: 1; padding: 0.5rem 0.75rem; font-size: 0.875rem; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); color: white; border-radius: 0.375rem; transition: all 0.3s ease; box-shadow: 0 2px 4px rgba(59, 130, 246, 0.3);" onmouseover="this.style.background='linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%)'" onmouseout="this.style.background='linear-gradient(135deg, #3b82f6 0%, #1e40af 100%)'">View</button>
        </div>
      </div>
      
      <!-- Palmistry Service -->
      <div class="admin-card" style="padding: 1.5rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 80px; height: 80px; background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.05) 100%); border-radius: 50%; transform: translate(20px, -20px);"></div>
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem; position: relative; z-index: 1;">
          <div style="padding: 0.75rem; border-radius: 50%; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.3);">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3);">
            Active
          </span>
        </div>
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 0.5rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Palmistry Reading</h3>
        <p style="color: #cbd5e1; font-size: 0.875rem; margin: 0 0 1rem 0;">Detailed palm reading to understand personality traits and future possibilities.</p>
        <div style="display: flex; align-items: center; justify-content: space-between; font-size: 0.875rem; color: #cbd5e1; margin: 0 0 1rem 0;">
          <span>Duration: 45 mins</span>
          <span style="color: #f8fafc; font-weight: 600;">₹1,800</span>
        </div>
        <div style="display: flex; gap: 0.5rem;">
          <button style="flex: 1; padding: 0.5rem 0.75rem; font-size: 0.875rem; border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; color: #cbd5e1; background: rgba(30, 41, 59, 0.8); transition: all 0.3s ease;" onmouseover="this.style.background='rgba(59, 130, 246, 0.2)'" onmouseout="this.style.background='rgba(30, 41, 59, 0.8)'">Edit</button>
          <button style="flex: 1; padding: 0.5rem 0.75rem; font-size: 0.875rem; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); color: white; border-radius: 0.375rem; transition: all 0.3s ease; box-shadow: 0 2px 4px rgba(59, 130, 246, 0.3);" onmouseover="this.style.background='linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%)'" onmouseout="this.style.background='linear-gradient(135deg, #3b82f6 0%, #1e40af 100%)'">View</button>
        </div>
      </div>
      
      <!-- Numerology Service -->
      <div class="admin-card" style="padding: 1.5rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 80px; height: 80px; background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(124, 58, 237, 0.05) 100%); border-radius: 50%; transform: translate(20px, -20px);"></div>
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem; position: relative; z-index: 1;">
          <div style="padding: 0.75rem; border-radius: 50%; background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; box-shadow: 0 4px 6px -1px rgba(139, 92, 246, 0.3);">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
            </svg>
          </div>
          <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3);">
            Active
          </span>
        </div>
        <h3 style="font-size: 1.125rem; font-weight: 600; color: #f8fafc; margin: 0 0 0.5rem 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Numerology Analysis</h3>
        <p style="color: #cbd5e1; font-size: 0.875rem; margin: 0 0 1rem 0;">Comprehensive numerology reading based on name and birth date calculations.</p>
        <div style="display: flex; align-items: center; justify-content: space-between; font-size: 0.875rem; color: #cbd5e1; margin: 0 0 1rem 0;">
          <span>Duration: 30 mins</span>
          <span style="color: #f8fafc; font-weight: 600;">₹1,200</span>
        </div>
        <div style="display: flex; gap: 0.5rem;">
          <button style="flex: 1; padding: 0.5rem 0.75rem; font-size: 0.875rem; border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; color: #cbd5e1; background: rgba(30, 41, 59, 0.8); transition: all 0.3s ease;" onmouseover="this.style.background='rgba(59, 130, 246, 0.2)'" onmouseout="this.style.background='rgba(30, 41, 59, 0.8)'">Edit</button>
          <button style="flex: 1; padding: 0.5rem 0.75rem; font-size: 0.875rem; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); color: white; border-radius: 0.375rem; transition: all 0.3s ease; box-shadow: 0 2px 4px rgba(59, 130, 246, 0.3);" onmouseover="this.style.background='linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%)'" onmouseout="this.style.background='linear-gradient(135deg, #3b82f6 0%, #1e40af 100%)'">View</button>
        </div>
      </div>
      
      <!-- Gemstone Service -->
      <div class="admin-card p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Active
          </span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Gemstone Consultation</h3>
        <p class="text-gray-600 text-sm mb-4">Personalized gemstone recommendations based on birth chart analysis.</p>
        <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
          <span>Duration: 45 mins</span>
          <span>₹2,000</span>
        </div>
        <div class="flex space-x-2">
          <button class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-md hover:bg-gray-50">Edit</button>
          <button class="flex-1 px-3 py-2 text-sm bg-blue-600 text-white rounded-md hover:bg-blue-700">View</button>
        </div>
      </div>
      
      <!-- Kundli Service -->
      <div class="admin-card p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 rounded-full bg-red-100 text-red-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Active
          </span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Kundli Analysis</h3>
        <p class="text-gray-600 text-sm mb-4">Detailed birth chart creation and analysis with planetary positions.</p>
        <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
          <span>Duration: 90 mins</span>
          <span>₹3,500</span>
        </div>
        <div class="flex space-x-2">
          <button class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-md hover:bg-gray-50">Edit</button>
          <button class="flex-1 px-3 py-2 text-sm bg-blue-600 text-white rounded-md hover:bg-blue-700">View</button>
        </div>
      </div>
      
      <!-- Matchmaking Service -->
      <div class="admin-card p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 rounded-full bg-pink-100 text-pink-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Active
          </span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Matchmaking Analysis</h3>
        <p class="text-gray-600 text-sm mb-4">Compatibility analysis for marriage and relationship guidance.</p>
        <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
          <span>Duration: 60 mins</span>
          <span>₹2,800</span>
        </div>
        <div class="flex space-x-2">
          <button class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-md hover:bg-gray-50">Edit</button>
          <button class="flex-1 px-3 py-2 text-sm bg-blue-600 text-white rounded-md hover:bg-blue-700">View</button>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
