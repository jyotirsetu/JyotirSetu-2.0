---
import AdminLayout from '../../admin/layouts/AdminLayout.astro';
---

<AdminLayout title="Testimonial Management">
  <div style="max-width: 80rem; margin: 0 auto;">
    <!-- Header -->
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2rem;">
      <div>
        <h1 style="font-size: 1.875rem; font-weight: bold; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Testimonial Management</h1>
        <p style="color: #cbd5e1; margin-top: 0.5rem; margin-bottom: 0;">Manage client testimonials and reviews</p>
      </div>
      <a href="/admin/testimonial-management/new" class="admin-btn-primary">
        <svg style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Add New Testimonial
      </a>
    </div>
    
    <!-- Filters -->
    <div class="admin-card" style="padding: 1.5rem; margin-bottom: 1.5rem;">
      <div style="display: flex; flex-wrap: wrap; align-items: center; gap: 1rem;">
        <div>
          <label style="display: block; font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin-bottom: 0.25rem;">Status</label>
          <select style="border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; padding: 0.5rem 0.75rem; font-size: 0.875rem; background: rgba(30, 41, 59, 0.8); color: #f8fafc; backdrop-filter: blur(10px);">
            <option value="">All Status</option>
            <option value="approved">Approved</option>
            <option value="pending">Pending</option>
            <option value="rejected">Rejected</option>
          </select>
        </div>
        <div>
          <label style="display: block; font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin-bottom: 0.25rem;">Service</label>
          <select style="border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; padding: 0.5rem 0.75rem; font-size: 0.875rem; background: rgba(30, 41, 59, 0.8); color: #f8fafc; backdrop-filter: blur(10px);">
            <option value="">All Services</option>
            <option value="astrology">Astrology</option>
            <option value="palmistry">Palmistry</option>
            <option value="numerology">Numerology</option>
            <option value="gemstone">Gemstone</option>
          </select>
        </div>
        <div>
          <label style="display: block; font-size: 0.875rem; font-weight: 500; color: #cbd5e1; margin-bottom: 0.25rem;">Rating</label>
          <select style="border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 0.375rem; padding: 0.5rem 0.75rem; font-size: 0.875rem; background: rgba(30, 41, 59, 0.8); color: #f8fafc; backdrop-filter: blur(10px);">
            <option value="">All Ratings</option>
            <option value="5">5 Stars</option>
            <option value="4">4 Stars</option>
            <option value="3">3 Stars</option>
            <option value="2">2 Stars</option>
            <option value="1">1 Star</option>
          </select>
        </div>
        <div style="display: flex; align-items: end;">
          <button class="admin-btn-primary">Filter</button>
        </div>
      </div>
    </div>
    
    <!-- Testimonials Grid -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 1.5rem;">
      <!-- Testimonial 1 -->
      <div class="admin-card" style="padding: 1.5rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 80px; height: 80px; background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(30, 64, 175, 0.05) 100%); border-radius: 50%; transform: translate(20px, -20px);"></div>
        <div style="display: flex; align-items: start; justify-content: space-between; margin-bottom: 1rem; position: relative; z-index: 1;">
          <div style="display: flex; align-items: center;">
            <div style="width: 3rem; height: 3rem; background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3);">
              <span style="color: white; font-weight: 600; font-size: 0.875rem;">PS</span>
            </div>
            <div style="margin-left: 0.75rem;">
              <h4 style="font-weight: 500; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Priya Sharma</h4>
              <p style="font-size: 0.875rem; color: #cbd5e1; margin: 0;">Astrology Consultation</p>
            </div>
          </div>
          <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3);">
            Approved
          </span>
        </div>
        
        <div style="display: flex; align-items: center; margin-bottom: 0.75rem;">
          <div style="display: flex; color: #fbbf24;">
            <svg style="width: 1.25rem; height: 1.25rem; fill: currentColor;" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg style="width: 1.25rem; height: 1.25rem; fill: currentColor;" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg style="width: 1.25rem; height: 1.25rem; fill: currentColor;" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg style="width: 1.25rem; height: 1.25rem; fill: currentColor;" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg style="width: 1.25rem; height: 1.25rem; fill: currentColor;" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
          </div>
          <span style="margin-left: 0.5rem; font-size: 0.875rem; color: #cbd5e1;">5.0</span>
        </div>
        
        <p style="color: #cbd5e1; margin-bottom: 1rem; line-height: 1.6;">"Amazing consultation! Punita ji's insights about my career path were incredibly accurate. The birth chart analysis helped me understand my strengths and make better decisions. Highly recommended!"</p>
        
        <div style="display: flex; align-items: center; justify-content: space-between; font-size: 0.875rem; color: #cbd5e1;">
          <span>Jan 15, 2024</span>
          <div style="display: flex; gap: 0.5rem;">
            <button style="color: #60a5fa; transition: color 0.3s ease;" onmouseover="this.style.color='#93c5fd'" onmouseout="this.style.color='#60a5fa'">Edit</button>
            <button style="color: #f87171; transition: color 0.3s ease;" onmouseover="this.style.color='#fca5a5'" onmouseout="this.style.color='#f87171'">Delete</button>
          </div>
        </div>
      </div>
      
      <!-- Testimonial 2 -->
      <div class="admin-card" style="padding: 1.5rem; position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; right: 0; width: 80px; height: 80px; background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.05) 100%); border-radius: 50%; transform: translate(20px, -20px);"></div>
        <div style="display: flex; align-items: start; justify-content: space-between; margin-bottom: 1rem; position: relative; z-index: 1;">
          <div style="display: flex; align-items: center;">
            <div style="width: 3rem; height: 3rem; background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.3);">
              <span style="color: white; font-weight: 600; font-size: 0.875rem;">RK</span>
            </div>
            <div style="margin-left: 0.75rem;">
              <h4 style="font-weight: 500; color: #f8fafc; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Rajesh Kumar</h4>
              <p style="font-size: 0.875rem; color: #cbd5e1; margin: 0;">Palmistry Reading</p>
            </div>
          </div>
          <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; box-shadow: 0 2px 4px rgba(245, 158, 11, 0.3);">
            Pending
          </span>
        </div>
        
        <div class="flex items-center mb-3">
          <div class="flex text-yellow-400">
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
          </div>
          <span class="ml-2 text-sm text-gray-600">5.0</span>
        </div>
        
        <p class="text-gray-700 mb-4">"The palmistry session was very insightful. Punita ji explained everything clearly and gave practical advice. I learned a lot about my personality traits and future possibilities."</p>
        
        <div class="flex items-center justify-between text-sm text-gray-500">
          <span>Jan 16, 2024</span>
          <div class="flex space-x-2">
            <button class="text-green-600 hover:text-green-900">Approve</button>
            <button class="text-blue-600 hover:text-blue-900">Edit</button>
            <button class="text-red-600 hover:text-red-900">Reject</button>
          </div>
        </div>
      </div>
      
      <!-- Testimonial 3 -->
      <div class="admin-card p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
              <span class="text-purple-600 font-semibold">SP</span>
            </div>
            <div class="ml-3">
              <h4 class="font-medium text-gray-900">Sneha Patel</h4>
              <p class="text-sm text-gray-600">Numerology Analysis</p>
            </div>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Approved
          </span>
        </div>
        
        <div class="flex items-center mb-3">
          <div class="flex text-yellow-400">
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current text-gray-300" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
          </div>
          <span class="ml-2 text-sm text-gray-600">4.0</span>
        </div>
        
        <p class="text-gray-700 mb-4">"Great numerology session! The analysis of my name and birth date was very detailed. I got valuable insights about my life path and career direction."</p>
        
        <div class="flex items-center justify-between text-sm text-gray-500">
          <span>Jan 17, 2024</span>
          <div class="flex space-x-2">
            <button class="text-blue-600 hover:text-blue-900">Edit</button>
            <button class="text-red-600 hover:text-red-900">Delete</button>
          </div>
        </div>
      </div>
      
      <!-- Testimonial 4 -->
      <div class="admin-card p-6">
        <div class="flex items-start justify-between mb-4">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
              <span class="text-yellow-600 font-semibold">AS</span>
            </div>
            <div class="ml-3">
              <h4 class="font-medium text-gray-900">Amit Singh</h4>
              <p class="text-sm text-gray-600">Gemstone Consultation</p>
            </div>
          </div>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Approved
          </span>
        </div>
        
        <div class="flex items-center mb-3">
          <div class="flex text-yellow-400">
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
            </svg>
          </div>
          <span class="ml-2 text-sm text-gray-600">5.0</span>
        </div>
        
        <p class="text-gray-700 mb-4">"Excellent gemstone consultation! Punita ji recommended the perfect gemstone for me based on my birth chart. The results have been positive since I started wearing it."</p>
        
        <div class="flex items-center justify-between text-sm text-gray-500">
          <span>Jan 18, 2024</span>
          <div class="flex space-x-2">
            <button class="text-blue-600 hover:text-blue-900">Edit</button>
            <button class="text-red-600 hover:text-red-900">Delete</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
