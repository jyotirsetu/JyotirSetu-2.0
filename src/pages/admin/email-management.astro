  id: string;
  to: string;
  from: string;
  subject: string;
  content: string;
  timestamp: string;
  status: 'sent' | 'delivered' | 'opened' | 'failed';
  type: 'incoming' | 'outgoing';
  appointment_id?: string;
  template_id?: string;
}

interface EmailTemplate {
  id: string;
  name: string;
  subject: string;
  content: string;
  category: 'appointment' | 'reminder' | 'followup' | 'newsletter' | 'general';
