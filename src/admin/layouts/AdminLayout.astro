---
import Image from '~/components/common/Image.astro';
import logoImage from '~/assets/images/JyotirSetu Full Logo Transparent.png';

export interface Props {
  metadata?: {
    description?: string;
    robots?: {
      index?: boolean;
      follow?: boolean;
    };
    [key: string]: unknown;
  };
  title?: string;
}

const { metadata, title = "Admin Panel" } = Astro.props;

const adminMetadata = {
  title: `${title} - JyotirSetu Admin`,
  description: 'JyotirSetu Admin Panel - Manage your astrology website',
  robots: {
    index: false,
    follow: false,
  },
  ...metadata,
} as {
  title: string;
  description: string;
  robots: {
    index: boolean;
    follow: boolean;
  };
  [key: string]: unknown;
};
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={adminMetadata.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{adminMetadata.title}</title>
    
    <!-- Tailwind CSS -->
    
    <!-- Reset all styles to prevent conflicts -->
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html, body {
        height: 100%;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }
      
      :root {
        --admin-primary: #3b82f6;
        --admin-secondary: #1e40af;
        --admin-accent: #3b82f6;
        --admin-success: #10b981;
        --admin-warning: #f59e0b;
        --admin-error: #ef4444;
        --admin-bg: #f8fafc;
        --admin-sidebar: #1e293b;
        --admin-card: #ffffff;
        --admin-text: #1f2937;
        --admin-text-muted: #6b7280;
        --admin-border: #e5e7eb;
      }
      
      .admin-container {
        height: 100vh;
        display: flex;
        background: var(--admin-bg);
        position: relative;
      }
      
      .admin-sidebar {
        background: linear-gradient(180deg, #0f172a 0%, #020617 100%);
        width: 256px;
        flex-shrink: 0;
        overflow-y: auto;
        position: relative;
        box-shadow: 8px 0 32px rgba(0, 0, 0, 0.4), 4px 0 16px rgba(0, 0, 0, 0.2);
        border-right: 1px solid rgba(59, 130, 246, 0.2);
        transition: transform 0.3s ease-in-out;
        z-index: 1000;
      }
      
      /* Mobile sidebar overlay */
      .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
      }
      
      .sidebar-overlay.active {
        display: block;
        opacity: 1;
      }
      
      /* Mobile hamburger button */
      .mobile-menu-btn {
        display: none;
        position: fixed;
        top: 1rem;
        left: 1rem;
        z-index: 1001;
        background: rgba(30, 41, 59, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 0.5rem;
        padding: 0.75rem;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
      }
      
      .mobile-menu-btn:hover {
        background: rgba(30, 41, 59, 1);
        border-color: rgba(59, 130, 246, 0.5);
        transform: scale(1.05);
      }
      
      .mobile-menu-btn svg {
        width: 1.5rem;
        height: 1.5rem;
      }
      
      .admin-sidebar::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
          radial-gradient(circle at 20% 20%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
          radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
          radial-gradient(circle at 50% 50%, rgba(16, 185, 129, 0.1) 0%, transparent 70%);
        pointer-events: none;
        z-index: 0;
      }
      
      .admin-main {
        flex: 1;
        overflow-y: auto;
        background: 
          linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%),
          radial-gradient(circle at 25% 25%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
          radial-gradient(circle at 75% 75%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
          radial-gradient(circle at 50% 50%, rgba(16, 185, 129, 0.1) 0%, transparent 70%);
        position: relative;
      }
      
      .admin-main::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
          radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.2) 0%, transparent 50%),
          radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.2) 0%, transparent 50%),
          radial-gradient(circle at 40% 40%, rgba(16, 185, 129, 0.15) 0%, transparent 50%),
          radial-gradient(circle at 60% 80%, rgba(245, 158, 11, 0.1) 0%, transparent 50%);
        pointer-events: none;
        z-index: 0;
        animation: backgroundFloat 20s ease-in-out infinite;
      }
      
      @keyframes backgroundFloat {
        0%, 100% {
          transform: translateY(0px) rotate(0deg);
        }
        33% {
          transform: translateY(-10px) rotate(1deg);
        }
        66% {
          transform: translateY(5px) rotate(-1deg);
        }
      }
      
      .admin-card {
        background: rgba(30, 41, 59, 0.8);
        backdrop-filter: blur(15px);
        border-radius: 0.75rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3), 0 4px 16px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(59, 130, 246, 0.2);
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
      }
      
      .admin-card:hover {
        background: rgba(30, 41, 59, 0.9);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4), 0 8px 20px rgba(59, 130, 246, 0.2);
        transform: translateY(-4px);
        border-color: rgba(59, 130, 246, 0.4);
      }
      
      .admin-btn-primary {
        background: linear-gradient(135deg, var(--admin-primary) 0%, var(--admin-secondary) 100%);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
        cursor: pointer;
        font-size: 0.875rem;
        font-weight: 600;
        box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3);
      }
      
      .admin-btn-primary:hover {
        background: linear-gradient(135deg, var(--admin-secondary) 0%, #1e3a8a 100%);
        transform: translateY(-1px);
        box-shadow: 0 6px 8px -1px rgba(59, 130, 246, 0.4);
      }
      
      .admin-nav-link {
        color: #cbd5e1;
        padding: 0.875rem 1rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        position: relative;
        backdrop-filter: blur(10px);
      }
      
      .admin-nav-link:hover {
        color: white;
        background: rgba(59, 130, 246, 0.2);
        transform: translateX(4px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
      }
      
      .admin-nav-link.active {
        color: white;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.3) 0%, rgba(30, 64, 175, 0.3) 100%);
        border-left: 3px solid var(--admin-primary);
        font-weight: 600;
        box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
      }
      
      .admin-nav-link.active::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 3px;
        background: linear-gradient(180deg, var(--admin-primary) 0%, #60a5fa 100%);
        border-radius: 0 2px 2px 0;
        box-shadow: 0 0 8px rgba(59, 130, 246, 0.6);
      }
      
      .admin-content {
        padding: 2rem;
        max-width: 100%;
        position: relative;
        z-index: 1;
      }
      
      /* Quick Action Card Hover Effects */
      .quick-action-card {
        transition: all 0.3s ease;
      }
      
      .quick-action-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        border-color: rgba(59, 130, 246, 0.3);
      }
      
      .quick-action-card:hover .quick-action-icon {
        transform: scale(1.1);
      }
      
      .quick-action-icon {
        transition: all 0.3s ease;
      }
      
      /* Dashboard Animations */
      .dashboard-card {
        animation: slideInUp 0.6s ease-out;
      }
      
      .dashboard-card:nth-child(1) { animation-delay: 0.1s; }
      .dashboard-card:nth-child(2) { animation-delay: 0.2s; }
      .dashboard-card:nth-child(3) { animation-delay: 0.3s; }
      .dashboard-card:nth-child(4) { animation-delay: 0.4s; }
      
      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .chart-bar {
        animation: growUp 1s ease-out;
      }
      
      @keyframes growUp {
        from {
          height: 0;
        }
        to {
          height: var(--bar-height);
        }
      }
      
      .pulse-dot {
        animation: pulse 2s infinite;
      }
      
      @keyframes pulse {
        0%, 100% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
      }
      
      /* Hover Effects */
      .stats-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4), 0 8px 20px rgba(59, 130, 246, 0.3);
      }
      
      .analytics-card:hover {
        transform: translateY(-1px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3), 0 4px 16px rgba(0, 0, 0, 0.2);
      }
      
      /* Mobile Responsive Styles */
      @media (max-width: 768px) {
        .admin-sidebar {
          position: fixed;
          top: 0;
          left: 0;
          height: 100vh;
          transform: translateX(-100%);
          z-index: 1000;
        }
        
        .admin-sidebar.mobile-open {
          transform: translateX(0);
        }
        
        .admin-main {
          width: 100%;
          margin-left: 0;
          padding-top: 4rem; /* Space for mobile menu button */
        }
        
        .mobile-menu-btn {
          display: block;
        }
        
        .admin-content {
          padding: 1rem;
        }
        
        /* Adjust admin cards for mobile */
        .admin-card {
          margin-bottom: 1rem;
          padding: 1rem;
        }
        
        /* Mobile table adjustments */
        .admin-table {
          font-size: 0.875rem;
        }
        
        .admin-table th,
        .admin-table td {
          padding: 0.5rem 0.25rem;
        }
        
        /* Hide less important columns on mobile */
        .admin-table .mobile-hide {
          display: none;
        }
        
        /* Stack form elements on mobile */
        .form-row {
          flex-direction: column;
          gap: 1rem;
        }
        
        .form-group {
          width: 100%;
        }
        
        /* Mobile button adjustments */
        .admin-btn-primary {
          width: 100%;
          justify-content: center;
          margin-bottom: 0.5rem;
        }
        
        /* Mobile stats cards */
        .stats-grid {
          grid-template-columns: 1fr;
          gap: 1rem;
        }
        
        /* Mobile navigation adjustments */
        .admin-nav-link {
          padding: 1rem;
          font-size: 1rem;
        }
        
        .admin-nav-link svg {
          width: 1.5rem;
          height: 1.5rem;
        }
        
        /* Show mobile close button */
        .mobile-close-btn {
          display: block !important;
        }
        
        .mobile-close-btn:hover {
          background-color: rgba(255, 255, 255, 0.1);
        }
      }
      
      /* Tablet adjustments */
      @media (max-width: 1024px) and (min-width: 769px) {
        .admin-sidebar {
          width: 200px;
        }
        
        .admin-main {
          margin-left: 0;
        }
        
        .mobile-menu-btn {
          display: block;
        }
        
        .admin-sidebar {
          position: fixed;
          transform: translateX(-100%);
          z-index: 1000;
        }
        
        .admin-sidebar.mobile-open {
          transform: translateX(0);
        }
      }
    </style>
  </head>
