{
  "buildCommand": "npm run build",
  "outputDirectory": ".vercel/output",
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "src/pages/api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/_astro/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "RESEND_API_KEY": "@resend_api_key",
    "FROM_EMAIL": "@from_email"
  }
}
